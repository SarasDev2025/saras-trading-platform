# Database Configuration
DATABASE_URL=postgresql://trading_user:dev_password_123@pgbouncer:5432/trading_dev

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# RabbitMQ Configuration
RABBITMQ_URL=amqp://trading_user:dev_password_123@rabbitmq:5672/

# Alpaca Broker Configuration
ALPACA_API_KEY=your-alpaca-paper-api-key
ALPACA_SECRET_KEY=your-alpaca-paper-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Alpaca Live Trading Configuration (Production Only)
ALPACA_LIVE_API_KEY=your-alpaca-live-api-key
ALPACA_LIVE_SECRET_KEY=your-alpaca-live-secret-key
ALPACA_LIVE_BASE_URL=https://api.alpaca.markets

# Zerodha Broker Configuration (Paper Trading)
ZERODHA_API_KEY=your-zerodha-sandbox-api-key
ZERODHA_SECRET_KEY=your-zerodha-sandbox-secret-key
ZERODHA_BASE_URL=https://api.kite.trade

# Zerodha Live Trading Configuration (Production Only)
ZERODHA_LIVE_API_KEY=your-zerodha-live-api-key
ZERODHA_LIVE_SECRET_KEY=your-zerodha-live-secret-key
ZERODHA_LIVE_BASE_URL=https://api.kite.trade

# Trading Mode Configuration
# Options: 'paper' (default) or 'live'
# WARNING: Set to 'live' only in production with proper credentials
DEFAULT_TRADING_MODE=paper
ALLOW_LIVE_TRADING=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://web-ui:3000

# Environment
ENVIRONMENT=development
